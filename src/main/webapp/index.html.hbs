<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org" xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title th:text="${appTitle}">Premier, Inc.</title>
	<meta charset="utf-8" />
    <meta name="token" th:content="${token}" />
    <meta name="token_header" th:content="${tokenHeaderName}" />
    <meta name="token_param" th:content="${tokenParamName}" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <meta name="format-detection" content="telephone=no" />
    <meta id="viewportmeta" name="viewport" content="initial-scale=1.0, width=device-width" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="theme-color" th:content="${themeColor}" content="#003b49" />
    {{#each htmlWebpackPlugin.files.css}}
    <link href="{{this}}" rel="stylesheet" />
    {{/each}}
    <link th:href="@{'css/' + ${appModuleCode} + '.css'}" rel="stylesheet" />
    <link href="theme/css/theme.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />

	<script src="scripts/lib/modernizr.min.js"></script>
    <script th:inline="javascript">
    /*<![CDATA[*/
        var userInfo = /*[[${userInfo}]]*/ {},
            metadata = /*[[${metadata}]]*/ {};
    /*]]>*/
    </script>
</head>
<body class="fireball">
    <div id="app"></div>
    {{#each htmlWebpackPlugin.files.chunks}}
    <script src="{{entry}}"></script>
    {{/each}}
</body>
</html>